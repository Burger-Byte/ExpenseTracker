#:kivy 2.0
<ManageCategoriesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        MDLabel:
            text: "Manage Categories"
            font_style: "H4"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            MDGridLayout:
                id: categories_list
                cols: 1
                adaptive_height: True
                padding: dp(10)
                spacing: dp(10)

        MDTextField:
            id: category_input
            hint_text: 'New Category Name'
            mode: "rectangle"

        MDRaisedButton:
            text: 'Add Category'
            pos_hint: {'center_x': 0.5}
            on_press: root.add_category()

        MDRaisedButton:
            text: 'Back to Main Screen'
            pos_hint: {'center_x': 0.5}
            on_press: root.go_back_to_main()
