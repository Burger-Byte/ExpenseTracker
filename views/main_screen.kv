#:kivy 2.0
<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            id: total_label
            text: "Total Expenses: $0.00"
            font_size: '20sp'
            size_hint_y: None
            height: 50

        ScrollView:
            size_hint: (1, None)
            size: (root.width, 400)
            GridLayout:
                id: scroll_layout
                cols: 1
                spacing: 10
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: 'Add Expense'
                on_press: root.go_to_add_expense()
            Button:
                text: 'View Reports'
                on_press: root.go_to_view_reports()
