#:kivy 2.0
<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        # Title for the main screen
        MDLabel:
            text: "Expense Overview"
            font_style: "H4"
            halign: "center"
            size_hint_y: None
            height: dp(40)

        # Graph Layout for the graphs
        BoxLayout:
            id: graph_layout
            orientation: 'horizontal'
            size_hint_y: 0.8  # 80% for graphs
            spacing: dp(10)
            padding: dp(10)


