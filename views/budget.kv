#:kivy 2.0
<SetBudgetScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        MDLabel:
            text: "Set Budget for Categories"
            font_style: "H4"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: category_input
            hint_text: 'Category'
            mode: "rectangle"
            required: True

        MDTextField:
            id: budget_input
            hint_text: 'Budget Amount'
            mode: "rectangle"
            input_filter: 'float'  # Ensure the input is a number
            required: True

        MDRaisedButton:
            text: 'Save Budget'
            pos_hint: {'center_x': 0.5}
            on_press: root.save_budget()

        # Navigation for screens happens via bottom navigation
